@model BusinessUnitToolInfoViewModel
<div id="modalBusinessUnitToolInfoAddOrEdit" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">BusinessUnitToolInfo Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="modal-body">
                  <form data-ajax-url="/BusinessUnitToolInfo/SaveAjax"
                        data-ajax="true"
                        data-ajax-begin="BusinessUnitToolInfo.ModalBusinessUnitToolInfoBegin();"
                        data-ajax-complete="BusinessUnitToolInfo.ModalBusinessUnitToolInfoComplete();"
                        data-ajax-failure="BusinessUnitToolInfo.ModalBusinessUnitToolInfoFailure();"
                        data-ajax-success="BusinessUnitToolInfo.ModalBusinessUnitToolInfoSuccess(data);"
                        id="formBusinessUnitToolInfoAdd"
                        method="post"
                        novalidate="novalidate" class="">

                    <div class="form-body">

                        <div class="form-group row">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="BusinessUnitToolInfoId" />
                            <label asp-for="BU" class="col-4 control-label"></label>
                            <div class="col-8">
                                <input asp-for="BU" class="form-control" />
                                <span asp-validation-for="BU"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Tool" class="col-4 control-label"></label>
                            <div class="col-8">
                                <input asp-for="Tool" class="form-control" />
                                <span asp-validation-for="Tool"></span>
                            </div>
                        </div>

                        <div class="form-actions form-actions-new">
                            <div class="row right">
                                <div class="col-12">
                                    <input type="submit" class="btn btn-sm btn-primary" value="Save" />
                                    <input type="button" class="btn btn-sm btn-secondary ml-2" data-dismiss="modal" value="Close" />
                                </div>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

