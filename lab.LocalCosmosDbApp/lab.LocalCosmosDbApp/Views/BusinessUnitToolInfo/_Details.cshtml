@model BusinessUnitToolInfoViewModel
<div id="modalBusinessUnitToolInfoDetail" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">BusinessUnitToolInfo Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-body">
                    <div class="form-group row mt-2">
                        <div class="col-4">
                            <label for="BU" class="control-label">BU: </label>
                        </div>
                        <div class="col-8" id="BU">@Model.BU</div>
                    </div>

                    <div class="form-group row mt-2">
                        <div class="col-4">
                            <label for="Tool" class="control-label">Tool: </label>
                        </div>
                        <div class="col-8" id="Tool">@Model.Tool</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" value="Close" />
            </div>
        </div>
    </div>
</div>